        <%- include('./partials/footer') -%>
            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    let i = 0;
                    const $loading = document.querySelector("#loading")
                    const func = () => {
                        $loading.innerHTML = ".".repeat(i + 1)
                        i %= 10;
                        i++;
                        setTimeout(func, 500)
                    }
                    func();
                })
